{
  "resources": {
    "head": [
      {
        "type": "style",
        "src": "index.css"
      },
      {
        "type": "script",
        "src": "index.js"
      }
    ]
  },
  "preview": {
    "handlers": [
      {
        "options": ["*"],
        "execute": "CloudflareWelcomeBar.setOptions(INSTALL_OPTIONS); CloudflareWelcomeBar.show();"
      }
    ]
  },
  "options": {
    "properties": {
      "text": {
        "order": 1,
        "title": "Message text",
        "type": "string",
        "format": "textarea",
        "default": "We just launched an amazing new product!"
      },
      "showLink": {
        "order": 2,
        "title": "Show a button link",
        "type": "boolean",
        "default": true
      },
      "buttonText": {
        "order": 3,
        "showIf": {
          "showLink": true
        },
        "title": "Button text",
        "type": "string",
        "default": "Take me there"
      },
      "linkAddress": {
        "order": 4,
        "showIf": {
          "showLink": true
        },
        "title": "URL to drive traffic to",
        "type": "string",
        "default": "https://cloudflare.com/apps"
      },
      "color": {
        "order": 5,
        "title": "Accent color",
        "type": "string",
        "format": "color",
        "default": "#0099ff"
      }
    }
  }
}
